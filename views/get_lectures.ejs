  width: 100vw !important;
  max-width: 100% !important;
  height: 95vh;
}

.fullscreen-modal .modal-content {
  height: 100%;
  overflow: hidden;
}

#pdfViewerContainer canvas {
  width: 100%;
  height: auto;
}
</style>

